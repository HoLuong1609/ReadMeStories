<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="@dimen/_3sdp">

    <data>
        <variable
            name="category"
            type="ominext.com.readmestories.models.Category"/>
        <variable
            name="handlers"
            type="ominext.com.readmestories.adapters.CategoryAdapter"/>
    </data>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/_4sdp"
        card_view:cardElevation="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:onClick="@{(v) -> handlers.onCategoryClick(v, category)}">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_category_height"
                android:scaleType="fitXY"
                app:url="@{category.getLargeTout()}"
                android:tag="category"/>

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="@{category.getTitle()}"
                android:textColor="@color/azure"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:background="@color/color_white"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>